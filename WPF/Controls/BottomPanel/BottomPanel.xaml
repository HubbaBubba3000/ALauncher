<UserControl x:Class="ALauncher.View.BottomPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ALauncher.View"
        mc:Ignorable="d">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Background="{StaticResource b3}">
            <TextBlock Text="{Binding Version}"  Margin="10,0,0,0" VerticalAlignment="Center" Foreground="{StaticResource b4}" />
            <TextBlock Text="{Binding Status, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,0,0,0" Foreground="{StaticResource b4}" />    
        </StackPanel>

</UserControl>