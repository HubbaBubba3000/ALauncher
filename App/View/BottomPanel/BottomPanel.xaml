<UserControl x:Class="ALauncher.View.BottomPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ALauncher.View"
        mc:Ignorable="d">
    <Border Background="{StaticResource b3}" CornerRadius="0,0,15,15">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch ">
            <Label Content="{Binding Version}"  Margin="10,0,0,0" Foreground="{StaticResource b4}" />
            <Label Content="{Binding Status}" Margin="0,0,20,0" Foreground="{StaticResource b4}" />
            
        </StackPanel>
    </Border>

</UserControl>