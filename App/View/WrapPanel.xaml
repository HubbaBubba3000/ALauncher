<UserControl x:Class="ALauncher.View.WrapPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ALauncher.View"
        mc:Ignorable="d">

    <Border CornerRadius="0,15,15,0" Background="{StaticResource b2}" >
        <Grid>
            <Button Width="30" Height="30" Style="{StaticResource BtnStyle}" Click="ButtonExit" 
               HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" >
                <Path  Width="15" Height="15" Stretch="Fill" 
                          Fill="{StaticResource b4}" Data="{StaticResource ExitIcon}"/>
            </Button>
            <WrapPanel ItemSource="{Binding Items}" ItemTemplate="{StaticResource ItemTemplate}" />
        </Grid>
    </Border>
</UserControl>